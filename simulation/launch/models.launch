<launch>
  <param name="pickuppoint_description" command="$(find xacro)/xacro '$(find pickuppoint)/urdf/pickuppoint.xacro'" />
  <node name="pickuppoint_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param pickuppoint_description -model pickuppoint -x 0.4" />
  
  <env name="GAZEBO_MODEL_PATH" value="$(find simulation)/models"/>
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find simulation)/worlds/pickuppoint.world"/>
  </include>
</launch>